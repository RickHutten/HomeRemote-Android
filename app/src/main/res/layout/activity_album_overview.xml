<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="nl.rickhutten.homeremote.ArtistOverviewActivity" >

    <ImageView
        android:id="@+id/topview"
        android:src="@drawable/annick"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="360dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/toppadding"
                android:layout_width="match_parent"
                android:layout_height="360dp" />

            <RelativeLayout
                android:id="@+id/divider"
                android:layout_below="@id/toppadding"
                android:layout_width="match_parent"
                android:background="@drawable/divider"
                android:layout_height="1dp" />

            <RelativeLayout
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:layout_below="@id/divider" >

                <RelativeLayout
                    android:id="@+id/shuffleButton"
                    android:layout_alignParentTop="true"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="37dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="-28dp"
                    style="@style/Base.Widget.AppCompat.Button"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_shuffle_white_48dp"
                        android:adjustViewBounds="false"
                        android:baselineAlignBottom="false"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:cropToPadding="false"
                        android:nestedScrollingEnabled="false" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/artistText"
                    android:layout_marginLeft="12dp"
                    android:textSize="16sp"
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Artist" />

                <TextView
                    android:id="@+id/albumText"
                    android:layout_marginLeft="12dp"
                    android:textSize="16sp"
                    android:layout_below="@id/artistText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Album" />

                <LinearLayout
                    android:id="@+id/songs"
                    android:layout_below="@id/albumText"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider"
                    android:showDividers="middle"/>

                <RelativeLayout
                    android:layout_below="@id/songs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/play_bar_height" />


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/playBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/black_trans" >

        <ImageView
            android:id="@+id/playPause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_play_circle_outline_white_48dp"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_toRightOf="@id/playPause"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_skip_next_white_48dp"/>

        <ImageView
            android:id="@+id/prev"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_toLeftOf="@id/playPause"
            android:layout_marginTop="7dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_skip_previous_white_48dp"/>

        <TextView
            android:id="@+id/playingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:textColor="@color/white"
            android:text="Not playing anything."
            android:elegantTextHeight="false"
            android:enabled="false"
            android:lines="1" />
    </RelativeLayout>

</RelativeLayout>
