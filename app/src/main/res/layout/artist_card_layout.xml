<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:id="@+id/cardHolder">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/artist_card_height" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <ImageView
                android:id="@+id/shuffleButton"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/artist_card_height"
                android:layout_height="@dimen/artist_card_height"
                android:padding="@dimen/artist_shufflebutton_padding"
                android:background="@drawable/ripple"
                android:src="@drawable/ic_shuffle_black_48dp"/>

            <RelativeLayout
                android:id="@+id/artistContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple"
                android:layout_toLeftOf="@id/shuffleButton">

            <TextView
                android:id="@+id/artistText"
                android:text="Artist"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>