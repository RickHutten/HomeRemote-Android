<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/slide</item>
        <item name="android:windowSharedElementExitTransition">@transition/slide</item>

        <item name="android:windowSharedElementReenterTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
